@page
@model CreateModel
@{
    ViewData["Title"] = "Create New Artist";
}

<div>
    <h1>New Artist</h1>
    
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div class="form-group">
                    <input asp-for="Artist.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
        
    </div>
</div>
