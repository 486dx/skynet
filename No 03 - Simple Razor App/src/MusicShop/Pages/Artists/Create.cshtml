@page
@model CreateModel
@{
    ViewData["Title"] = "Create New Artist";
}

<div>
    <h1>New Artist</h1>
    
        <div class="col-md-8">
            <form method="post">
                <div class="form-group">
                    <input asp-for="Artist.Name" placeholder="ismi..." class="form-control" />
                    <span asp-validation-for="Artist.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <textarea rows="10" asp-for="Artist.Biography" class="form-control" placeholder="Grup/artist açıklaması..."></textarea>
                    <span asp-validation-for="Artist.Biography" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
</div>
