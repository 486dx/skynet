@page
@model CreateModel
@{
    ViewData["Title"] = "Create New Album";
}

<div>
    <h1>New Album</h1>
    
        <div class="col-md-8">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <select asp-for="AlbumInstance.ArtistID" class="form-control"
                            asp-items="@Model.ArtistList">
                        <option value="">-- Kimin Albümü? --</option>
                    </select>
                    <span asp-validation-for="AlbumInstance.ArtistID" class="text-danger"></span> 
                </div>
                <div class="form-group">
                    <input asp-for="AlbumInstance.Title" placeholder="albümün adı..." class="form-control" />
                    <span asp-validation-for="AlbumInstance.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="AlbumInstance.ReleaseYear" class="form-control" placeholder="2005" />   
                    <span asp-validation-for="AlbumInstance.ReleaseYear" class="text-danger"></span>                
                </div>
                <div class="form-group">
                    <input type="file" asp-for="CoverPhotoFile" class="form-control" placeholder="Albüm kapağı..." accept="image/gif, image/jpeg, image/png" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
</div>
